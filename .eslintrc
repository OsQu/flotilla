{
  "parser": "babel-eslint",
  "plugins": [
    "flow-vars",
    "react"
  ],
  "extends": ["plugin:react/recommended"],
  "rules": {
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "consistent-return": [0],
    "eqeqeq": [2, "allow-null"],
    "quotes": [0],
    "no-undef": [2],
    "no-debugger": [2],
    "no-underscore-dangle": [0],
    "strict": [2, "global"],
    "comma-dangle": [0],
    "func-style": [2, "declaration", {"allowArrowFunctions": true}],
    "no-trailing-spaces": [2],
    "no-void": [2],
    "no-new": [2],
    "no-mixed-spaces-and-tabs": [2],
    "no-irregular-whitespace": [2],
    "no-shadow": [2, {"allow": ["$scope", "state", "action"]}],
    "space-before-function-paren": [2, "never"],
    "consistent-this": [2, "that"],
    "no-unused-expressions": [2, {
      "allowShortCircuit": true,
      "allowTernary": true
    }],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-use-before-define": [2, "nofunc"],
    "space-before-blocks": [2, "always"],
    "keyword-spacing": [2, {"after": true}],
    "brace-style": [2, "1tbs"],
    "no-lonely-if": [0],
    "no-unused-vars": [2],
    "linebreak-style": [2],
    "no-extra-boolean-cast": [2],
    "camelcase": [2, {
      "properties": "never"
    }],
    "one-var": [2, "never"],
    "no-var": 2,
    "prefer-const": 2,
    "no-bitwise": [2],
    "curly": [2],
    "max-len": [2, 200],
    "max-depth": [2, 4],
    "no-eval": [2],
    "new-cap": [2],
    "max-statements": [2, 50],
    "complexity": [2, 17],
    "no-cond-assign": [2],
    "semi": [2, "always"],
  },
  "globals": {
    "user": false,
    "describe": false,
    "it": false,
    "xdescribe": false,
    "xit": false,
    "expect": false,
    "beforeEach": false,
    "afterEach": false,
    "jasmine": false,
    "spyOn": false,
    "fixture": false
  },
  "env": {
    "es6": true,
    "node": true,
    "jquery": true,
    "browser": true
  },
  "ecmaFeatures": {
    "modules": true
  }
}
